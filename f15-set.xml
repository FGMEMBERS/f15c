<?xml version="1.0"?>

<PropertyList>

 <sim>
  <description>McDonell Douglas F-15 Eagle</description>
  <author>Erik Hofman</author>
  <status>alpha</status>
 
  <flight-model>jsb</flight-model>
  <aero>f15</aero>

  <help>
   <title>F-15 Eagle</title>
  </help>

  <startup>
   <splash-texture>Aircraft/f15c/f15c-splash.rgb</splash-texture>
  </startup>
  
  <sound>
   <path>Aircraft/f15c/f15c-sound.xml</path>
  </sound>

  <virtual-cockpit archive="y">true</virtual-cockpit>

  <view n="0">
   <internal archive="y">true</internal>
   <config>
    <x-offset-m archive="y">0</x-offset-m>
    <y-offset-m archive="y">0.9</y-offset-m>
    <z-offset-m archive="y">-3.95</z-offset-m>
   </config>
  </view>

  <panel>
   <path>Aircraft/f15c/Panels/f15c-2d-panel.xml</path>
   <visibility archive="y">false</visibility>
  </panel>
  <panel_2>
   <visibility>false</visibility>
  </panel_2>

  <hud>
   <path n="1">Aircraft/f15c/Panels/hud.xml</path>
   <visibility n="1">true</visibility>
   <clipping>
       <left type="double">-70</left>
       <right type="double">70</right>
       <top type="double">33</top><!-- 20 -->
       <bottom type="double">-88</bottom><!-- -102 -->
   </clipping>
  </hud>

  <view>
   <config>
     <pitch-offset-deg>-9</pitch-offset-deg>
     <default-field-of-view-deg>60</default-field-of-view-deg>
   </config>
  </view>

  <model>
   <path>Aircraft/f15c/Models/f15c.xml</path>
  </model>

  <chase-distance-m>-25</chase-distance-m>

 </sim>

 <engines>
  <engine n="0">
    <running>true</running>
  </engine>
  <engine n="1">
    <running>true</running>
  </engine>
 </engines>

 <consumables>
  <fuel>
   <tank n="0">
    <level-gal_us archive="y">200</level-gal_us>
   </tank>
   <tank n="1">
    <level-gal_us archive="y">200</level-gal_us>
   </tank>
  </fuel>
 </consumables>

</PropertyList>
