<PropertyList>

 <sim>

  <description>F-15C Eagle (3D Cockpit)</description>
  <author>Fabrice Kauffmann</author>
  <status>Early production</status>
 
  <flight-model>jsb</flight-model>
  <aero>f15c</aero>

  <startup>
   <splash-texture>Aircraft/f15c/f15c-splash.rgb</splash-texture>
  </startup>
  
  <sound>
   <path>Aircraft/f15c/f15c-sound.xml</path>
  </sound>

  <model>
   <path>Aircraft/f15c/Models/f15c3d.xml</path>
  </model>
  <panel>
   <visibility archive="y">false</visibility>
  </panel>

  <hud>
   <path>Aircraft/f15c/Hud/default.xml</path>
   <visibility>true</visibility>
  </hud>
  
  <view n="0">
   <internal archive="y">true</internal>
   <config>
     <x-offset-m archive="y">0.005</x-offset-m> <!-- -0.28-->
     <y-offset-m archive="y">0.9</y-offset-m>   <!-- 0.51-->
     <z-offset-m archive="y">-3.9</z-offset-m>   <!-- 2.62-->
     <pitch-offset-deg>0</pitch-offset-deg>
   </config>
  </view>

  <chase-distance-m>-25</chase-distance-m>

  <!-- turns off GA tower communications -->
  <ATC>
   <enabled type="bool">false</enabled>
  </ATC>

  <!-- turns off GA traffic -->
  <ai-traffic>
   <enabled type="bool">false</enabled>
  </ai-traffic>

 </sim>
 
 <engines>
  <engine n="0">
    <running>true</running>
  </engine>
 </engines>
 
</PropertyList>
